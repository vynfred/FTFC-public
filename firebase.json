{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": "5002",
      "host": "localhost"
    },
    "auth": {
      "port": "9098",
      "host": "localhost"
    },
    "firestore": {
      "port": "8081",
      "host": "localhost"
    },
    "ui": {
      "enabled": true,
      "port": "4004"
    }
  }
} 